<div class="my-3 d-flex justify-content-between align-items-center">
    <h1>Foydalanuvchilar</h1>
    <a href="/users/create" class="btn btn-primary" role="button">Foydalanuvchilarni Qo'shish</a>
</div>
<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Ism-Sharif</th>
            <th scope="col">Yosh</th>
            <th scope="col">Rol</th>
            <th scope="col">Login</th>
            <th class="col-2" scope="col">Amallar</th>
        </tr>
    </thead>
    <tbody>
        <% users.forEach((user, i)=> { %>
            <tr>
                <th>
                    <%= i + 1 %>
                </th>
                <td>
                    <%= `${user.firstName} ${user.lastName}` %>
                </td>
                <td>
                    <%= user.age %>
                </td>
                <td>
                    <%= user.role==="admin" ? "Admin" : "Hodim" %>
                </td>
                <td>
                    <%= user.username %>
                </td>
                <td class="d-flex gap-3">
                    <a class="btn btn-success" href="/users/<%= user.id %>">Ko'rish</a>
                    <% if (currentUser.role==="admin" ) { %>
                        <a class="btn btn-warning" href="/users/<%= user.id %>/edit">Tahrirlash</a>
                        <form action="/users/<%= user.id %>/delete" method="post">
                            <button class="btn btn-danger" type="submit">O'chirish</button>
                        </form>
                        <% } %>
                </td>
            </tr>
            <% }) %>
    </tbody>
</table>